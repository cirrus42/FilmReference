@page
@model FilmReference.FrontEnd.Pages.StudioPages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Studio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Studio.Id" />
            <div class="form-group">
                <label asp-for="Studio.Name" class="control-label"></label>
                <input asp-for="Studio.Name" class="form-control" autofocus />
                <span asp-validation-for="Studio.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Studio.Description" class="control-label"></label>
                @Html.TextAreaFor(s => s.Studio.Description, 5, 10, new { @class = "form-control" })
                <span asp-validation-for="Studio.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Studio.Picture" class="control-label"></label>
                <input type="file" asp-for="Studio.Picture" class="form-control" />
                <span asp-validation-for="Studio.Picture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <label class="control-label">Current picture</label>
                <br />
                <img src="@Model.ImageHelper.ImageSource(Model.Studio.Picture)" class="CompanyLogoSmall" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

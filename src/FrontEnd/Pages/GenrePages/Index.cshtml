@page
@using BusinessLogic.Extensions
@model FilmReference.FrontEnd.Pages.GenrePages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<p>
    @Model.GenreList.Count record@(@Model.GenreList.Count.ShowCorrectRecordText()) found
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GenreList[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenreList[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model.GenreList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => genre.Name)
                </td>
                @{
                    var stringValues = genre.Description.ConvertToDisplayValue(50);
                }
                <td title="@stringValues.ToolTip">
                    @Html.DisplayFor(modelItem => stringValues.DisplayValue)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@genre.Id">Details</a> |
                    <a asp-page="./Edit" asp-route-id="@genre.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

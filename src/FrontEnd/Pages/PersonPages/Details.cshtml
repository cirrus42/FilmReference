@page
@model FilmReference.FrontEnd.DetailsModel
@using FilmReference.FrontEnd.Classes.Helpers

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Person</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.FirstName) @Html.DisplayFor(model => model.Person.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person.IsActor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.IsActor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person.IsDirector)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.IsDirector)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person.Picture)
        </dt>
        <dd class="col-sm-10">
            <img src="@ImageHelper.ImageSource(Model.Person.Picture)" class="PersonImage" />
        </dd>
    </dl>
</div>

<div>
    <h3>Films</h3>
    <table>
        <tbody>
            @{
                var counter = 1;
            }
            <tr style="vertical-align: top">
                @foreach (var film in Model.Films)
                {
                    <td>
                        <a asp-page="/FilmPages/Details" asp-route-id="@film.FilmId">
                            <img src="@ImageHelper.ImageSource(film.Picture)" class="FilmImageSmall" />
                            <br />
                            <label>@film.Name</label>
                        </a>
                    </td>
                    if (counter % 4 == 0)
                    {
                        @Html.Raw("</tr><tr style=\"vertical-align: top\">");
                    }
                    counter++;
                }
            </tr>
        </tbody>
    </table>
</div>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Person.PersonId">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>

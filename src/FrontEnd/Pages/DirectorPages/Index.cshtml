@page
@model FilmReference.FrontEnd.Pages.DirectorPages.IndexModel
@using FilmReference.FrontEnd.Extensions

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="/PersonPages/Create">Create New</a>
</p>
<p>
    @Model.Person.Count record@(@Model.Person.Count.ShowCorrectRecordText()) found
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Person)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a asp-page="/PersonPages/Details" asp-route-id="@item.PersonId">Details</a> |
                    <a asp-page="/PersonPages/Edit" asp-route-id="@item.PersonId">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
